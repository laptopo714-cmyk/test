rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // دوال مساعدة للأمان
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isStudent() {
      return isAuthenticated() && 
        exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'student';
    }
    
    // قيود الحجم والنوع - محسنة
    function isValidImage() {
      return request.resource.size < 5 * 1024 * 1024 && // 5MB
             request.resource.contentType.matches('image/(jpeg|png|gif|webp)');
    }
    
    function isValidDocument() {
      return request.resource.size < 30 * 1024 * 1024 && // 30MB
             request.resource.contentType.matches('(application/pdf|application/msword|application/vnd.openxmlformats-officedocument.wordprocessingml.document|image/(jpeg|png|gif|webp))');
    }
    
    // قواعد الصور الشخصية - محمية
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true; // الصور الشخصية عامة
      allow write: if isAuthenticated() && request.auth.uid == userId && isValidImage();
    }
    
    // قواعد الملفات المرفقة للفيديوهات - محمية بشدة
    match /video-attachments/{videoId}/{fileName} {
      // المدراء فقط يمكنهم رفع الملفات المرفقة
      allow write: if isAdmin() && isValidDocument();
      // الطلاب يمكنهم قراءة الملفات المرفقة فقط
      allow read: if isStudent();
      // المدراء يمكنهم قراءة وحذف الملفات
      allow read, delete: if isAdmin();
    }
    
    // قواعد الملفات المؤقتة - محدودة الوقت
    match /temp/{userId}/{fileName} {
      allow read, write: if isAuthenticated() && 
        request.auth.uid == userId && 
        isValidDocument();
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // قواعد تصدير التقارير - للمدراء فقط
    match /exports/{fileName} {
      allow write: if isAdmin();
      allow read: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // منع الوصول لأي ملفات أخرى
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}